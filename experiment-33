def simulate_ddos(target, attackers, requests):
    print(f"Simulating DDoS on {target} from {attackers} attackers")
    for a in range(1, attackers+1):
        for i in range(requests):
            print(f"Attacker {a} sending request {i+1}")
    print("Target Flooded!")

simulate_ddos("bank.com", 3, 2)
